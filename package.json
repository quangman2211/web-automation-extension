{
  "name": "web-automation-extension",
  "version": "2.1.0",
  "description": "Advanced Chrome extension for human-like web automation with natural behavior simulation",
  "main": "background/background.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run copy-files",
    "clean": "rm -rf dist",
    "copy-files": "mkdir -p dist && cp -r . dist/ && rm -rf dist/node_modules dist/.git dist/dist",
    "dev": "npm run build && npm run watch",
    "watch": "chokidar 'src/**/*' -c 'npm run build'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "npm run lint && npm run test",
    "zip": "npm run build && cd dist && zip -r ../web-automation-extension.zip .",
    "docs": "jsdoc src/**/*.js -d docs",
    "format": "prettier --write 'src/**/*.{js,json,css,html}'",
    "analyze": "webpack-bundle-analyzer dist/bundle.js"
  },
  "keywords": [
    "chrome-extension",
    "automation",
    "web-automation",
    "browser-automation",
    "selenium-alternative",
    "human-behavior",
    "natural-simulation",
    "e-commerce-automation",
    "social-media-automation"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/web-automation-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/web-automation-extension/issues"
  },
  "homepage": "https://github.com/yourusername/web-automation-extension#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "prettier": "^3.1.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/docs/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "browser": true,
      "webextensions": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "manifest": {
    "version": "2.1.0",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs",
      "background"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  }
}